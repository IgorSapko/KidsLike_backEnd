			"CurrentUser": {
				"type": "object",
				"properties": {
					"user": {
						"type": "object",
						"properties": {
							"id": {
								"type": "string",
								"description": "User's id",
								"example": "60295cfb80a2de13a08aa123"
							},
							"email": {
