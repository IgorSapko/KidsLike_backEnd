{
	"openapi": "3.0.1",
	"info": {
		"version": "1.3.1",
		"title": "KidsLike API docs",
		"description": "API documentation for GoIT FS-36 group project 'KidsLike'.  [Backend github repository](https://github.com/IgorSapko/KidsLike_backEnd)",
		"license": {
			"name": "MIT",
			"url": "https://opensource.org/licenses/MIT"
		}
	},
	"servers": [
		{
			"url": "https://kids-like-backend-cloud.herokuapp.com"
		}
	],
	"tags": [
		{
			"name": "User",
			"description": "User endpoints"
		},
		{
			"name": "Auth",
			"description": "Authorization endpoints"
		},
		{
			"name": "Task",
			"description": "Tasks endpoints"
		}
	],
	"paths": {
		"/api/auth/sign-up": {
			"post": {
				"tags": ["Auth"],
				"summary": "User registration",
				"parameters": [],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SignUpRequest"
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Successful operation",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SignInResponse"
								}
							}
						}
					},
					"400": {
						"description": "Bad request (invalid request body)",
						"content": {}
					},
					"409": {
						"description": "Provided email already exists",
						"content": {}
					}
				}
			}
		},
		"/api/auth/sign-in": {
			"post": {
				"tags": ["Auth"],
				"summary": "User authentication",
				"parameters": [],
				"requestBody": {
					"description": "Authentication's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SignInRequest"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Successful operation",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SignInResponse"
								}
							}
						}
					},
					"400": {
						"description": "Bad request (invalid request body)",
						"content": {}
					},
					"403": {
						"description": "Email doesn't exist or password is wrong",
						"content": {}
					}
				}
			}
		},
		"/api/auth/sign-out": {
			"post": {
				"tags": ["Auth"],
				"summary": "User Logout",
				"security": [
					{
						"Bearer": []
					}
				],
				"parameters": [],
				"responses": {
					"204": {
						"description": "Successful operation",
						"content": {}
					},
					"400": {
						"description": "No token provided",
						"content": {}
					},
					"401": {
						"description": "Bearer auth failed",
						"content": {}
					},
					"404": {
						"description": "Invalid user",
						"content": {}
					}
				}
			}
		},
		"/api/task": {
			"post": {
				"tags": ["Task"],
				"summary": "Create custom task",
				"security": [
					{
						"Bearer": []
					}
				],
				"parameters": [],
				"requestBody": {
					"description": "Task's object",
					"required": true,
					"content": {
						"multipart/form-data": {
							"schema": {
								"$ref": "#/components/schemas/CreateTaskRequest"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Successful operation",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/CreateTaskResponse"
								}
							}
						}
					},
					"400": {
						"description": "Bad request (invalid request body or no token provided)",
						"content": {}
					},
					"401": {
						"description": "Bearer auth failed",
						"content": {}
					},
					"404": {
						"description": "Invalid user",
						"content": {}
					}
				}
			}
		},
		"/api/task/active/{taskId}": {
			"patch": {
				"tags": ["Task"],
				"summary": "Add task to provided days",
				"security": [
					{
						"Bearer": []
					}
				],
				"parameters": [
					{
						"name": "taskId",
						"in": "path",
						"required": true,
						"description": "Task's id (id field in task object)",
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "Dates object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/ActiveTaskRequest"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Successful operation",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ActiveTaskResponse"
								}
							}
						}
					},
					"400": {
						"description": "Bad request (invalid request body or id) / No token provided",
						"content": {}
					},
					"401": {
						"description": "Bearer auth failed",
						"content": {}
					},
					"404": {
						"description": "Invalid user / Task not found",
						"content": {}
					}
				}
			}
		},
		"/api/task/switch/{taskId}": {
			"patch": {
				"tags": ["Task"],
				"summary": "Set task as completed/uncompleted",
				"security": [
					{
						"Bearer": []
					}
				],
				"parameters": [
					{
						"name": "taskId",
						"in": "path",
						"required": true,
						"description": "Task's id (id field in task object)",
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "Date object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CompleteTaskRequest"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Successful operation",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/CompleteTaskResponse"
								}
							}
						}
					},
					"400": {
						"description": "Bad request (invalid request body or id) / No token provided / Task does not exist on provided day",
						"content": {}
					},
					"401": {
						"description": "Bearer auth failed",
						"content": {}
					},
					"404": {
						"description": "Invalid user / Task not found / Day not found",
						"content": {}
					}
				}
			}
		},
		"/api/user/current": {
			"get": {
				"tags": ["User"],
				"summary": "Get current user all info and checks current week",
				"security": [
					{
						"Bearer": []
					}
				],
				"parameters": [],
				"responses": {
					"200": {
						"description": "Successful operation",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/CurrentUser"
								}
							}
						}
					},
					"400": {
						"description": "No token provided",
						"content": {}
					},
					"401": {
						"description": "Bearer auth failed",
						"content": {}
					},
					"404": {
						"description": "Invalid user",
						"content": {}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"SignUpRequest": {
				"required": ["email", "password"],
				"type": "object",
				"properties": {
					"email": {
						"type": "string",
						"description": "User's email",
						"format": "email"
					},
					"password": {
						"type": "string",
						"description": "User's password",
						"example": "qwe123"
					}
				}
			},
			"SignInRequest": {
				"required": ["email", "password"],
				"type": "object",
				"properties": {
					"email": {
						"type": "string",
						"description": "User's email",
						"format": "email"
					},
					"password": {
						"type": "string",
						"description": "User's password",
						"example": "qwe123"
					}
				}
			},
			"SignInResponse": {
				"type": "object",
				"properties": {
					"token": {
						"type": "string",
						"description": "Session's access token (needed for all requests)",
						"example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiI2MDBiMGQ1ZDA1MjE0YjRmOWMxY2YyYTAiLCJpYXQiOjE2MTEzMzcxMDMsImV4cCI6MTYxMTQyMzUwM30.haDMEfmtQLYWG5nl1if867FrOfG7EBq59FNBskz1Tls"
					},
					"user": {
						"type": "object",
						"properties": {
							"id": {
								"type": "string",
								"description": "User's id",
								"example": "60295cfb80a2de13a08aa281"
							},
							"email": {
								"type": "string",
								"description": "User's email",
								"format": "email"
							},
							"balance": {
								"type": "integer",
								"description": "User's rewards balance",
								"example": 5,
								"minimum": 0
							}
						}
					},
					"week": {
						"type": "object",
						"description": "User's current week",
						"properties": {
							"_id": {
								"type": "string",
								"description": "Week's id",
								"example": "507f1f77bcf8de13a08aa281"
							},
							"startWeekDate": {
								"type": "string",
								"description": "Week start date",
								"example": "01-03-2021"
							},
							"endWeekDate": {
								"type": "string",
								"description": "Week end date",
								"example": "07-03-2021"
							},
							"pointsGained": {
								"type": "integer",
								"description": "Amount of rewards gained this week",
								"example": 5
							},
							"pointsPlanned": {
								"type": "integer",
								"description": "Amount of rewards planned for this week",
								"example": 10
							},
							"tasks": {
								"type": "array",
								"description": "Array of week's tasks",
								"items": {
									"type": "object",
									"description": "Week's task",
									"properties": {
										"_id": {
											"type": "string",
											"description": "Week's id",
											"example": "111f1f77bcf8de13a08aa123"
										},
										"title": {
											"type": "string",
											"description": "Task's title",
											"example": "Task 1"
										},
										"reward": {
											"type": "integer",
											"description": "Task's reward",
											"example": 5,
											"minimum": 1
										},
										"imageUrl": {
											"type": "string",
											"description": "Task's image URL"
										},
										"days": {
											"type": "array",
											"description": "Task's days",
											"items": {
												"type": "object",
												"description": "Day's task",
												"properties": {
													"date": {
														"type": "string",
														"description": "Day's date",
														"example": "01-03-2021"
													},
													"isActive": {
														"type": "boolean",
														"description": "Task's active status"
													},
													"isCompleted": {
														"type": "boolean",
														"description": "Task's complete status"
													}
												}
											}
										}
									}
								},
								"example": [
									{
										"_id": "507f1d12bcf8dq12e08aa123",
										"title": "Task 1",
										"reward": 5,
										"imageUrl": "example.com/image1",
										"days": [
											{
												"date": "01-03-2021",
												"isActive": false,
												"isCompleted": false
											},
											{
												"date": "02-03-2021",
												"isActive": false,
												"isCompleted": false
											},
											{
												"date": "03-03-2021",
												"isActive": false,
												"isCompleted": false
											},
											{
												"date": "04-03-2021",
												"isActive": false,
												"isCompleted": false
											},
											{
												"date": "05-03-2021",
												"isActive": true,
												"isCompleted": false
											},
											{
												"date": "06-03-2021",
												"isActive": false,
												"isCompleted": false
											},
											{
												"date": "07-03-2021",
												"isActive": true,
												"isCompleted": true
											}
										]
									}
								]
							}
						}
					}
				}
			},
			"CreateTaskRequest": {
				"type": "object",
				"required": ["title", "reward"],
				"properties": {
					"title": {
						"type": "string",
						"description": "Task's title",
						"example": "Task 1"
					},
					"reward": {
						"type": "integer",
						"description": "Task's reward",
						"minimum": 0,
						"example": 1
					},
					"taskAvatar": {
						"type": "string",
						"format": "binary",
						"description": "Image file"
					}
				}
			},
			"CreateTaskResponse": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"description": "Task's id",
						"example": "60312d4a9328064b7c18935f"
					},
					"title": {
						"type": "string",
						"description": "Task's title",
						"example": "Task 1"
					},
					"reward": {
						"type": "integer",
						"description": "Task's reward",
						"minimum": 0,
						"example": 1
					},
					"imageUrl": {
						"type": "string",
						"description": "Task's image URL"
					},
					"days": {
						"type": "array",
						"description": "Task's days",
						"items": {
							"type": "object",
							"description": "Day's task",
							"properties": {
								"date": {
									"type": "string",
									"description": "Day's date",
									"example": "01-03-2021"
								},
								"isActive": {
									"type": "boolean",
									"description": "Task's active status"
								},
								"isCompleted": {
									"type": "boolean",
									"description": "Task's complete status"
								}
							}
						},
						"example": [
							{
								"date": "01-03-2021",
								"isActive": false,
								"isCompleted": false
							},
							{
								"date": "02-03-2021",
								"isActive": false,
								"isCompleted": false
							},
							{
								"date": "03-03-2021",
								"isActive": false,
								"isCompleted": false
							},
							{
								"date": "04-03-2021",
								"isActive": false,
								"isCompleted": false
							},
							{
								"date": "05-03-2021",
								"isActive": true,
								"isCompleted": false
							},
							{
								"date": "06-03-2021",
								"isActive": false,
								"isCompleted": false
							},
							{
								"date": "07-03-2021",
								"isActive": true,
								"isCompleted": true
							}
						]
					}
				}
			},
			"ActiveTaskRequest": {
				"type": "object",
				"required": ["days"],
				"properties": {
					"days": {
						"type": "array",
						"minimum": 7,
						"maximum": 7,
						"description": "Array of 7 booleans type. Represent which day of the week is active, and which is not active. The first element of the array  corresponds to the first day (Monday), the second - Tuesday, etc.",
						"items": {
							"type": "boolean",
							"description": "Day's date"
						},
						"example": [true, true, false, true, false, false, false]
					}
				}
			},
			"ActiveTaskResponse": {
				"type": "object",
				"properties": {
					"updatedWeekPlannedPoints": {
						"type": "integer",
						"description": "Week's new amount of planned rewards",
						"example": 3
					},
					"updatedTask": {
						"type": "object",
						"properties": {
							"title": {
								"type": "string",
								"description": "Task's title",
								"example": "Task 1"
							},
							"reward": {
								"type": "integer",
								"description": "Task's reward",
								"minimum": 0,
								"example": 1
							},
							"imageUrl": {
								"type": "string",
								"description": "Task's image URL"
							},
							"id": {
								"type": "string",
								"description": "Task's id",
								"example": "603562179fccf011c05c40bf"
							},
							"days": {
								"type": "array",
								"description": "Task's days",
								"items": {
									"type": "object",
									"description": "Day's task",
									"properties": {
										"date": {
											"type": "string",
											"description": "Day's date",
											"example": "01-03-2021"
										},
										"isActive": {
											"type": "boolean",
											"description": "Task's active status"
										},
										"isCompleted": {
											"type": "boolean",
											"description": "Task's complete status"
										}
									}
								},
								"example": [
									{
										"date": "01-03-2021",
										"isActive": false,
										"isCompleted": false
									},
									{
										"date": "02-03-2021",
										"isActive": false,
										"isCompleted": false
									},
									{
										"date": "03-03-2021",
										"isActive": false,
										"isCompleted": false
									},
									{
										"date": "04-03-2021",
										"isActive": false,
										"isCompleted": false
									},
									{
										"date": "05-03-2021",
										"isActive": true,
										"isCompleted": false
									},
									{
										"date": "06-03-2021",
										"isActive": false,
										"isCompleted": false
									},
									{
										"date": "07-03-2021",
										"isActive": true,
										"isCompleted": true
									}
								]
							}
						}
					}
				}
			},
